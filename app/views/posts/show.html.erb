<!-- View for showing a single `Post` -->
<!-- `post_path` -->

<h3><%= @post.title %></h3>
<p><%= @post.body %></p>

<p>
  <%= link_to "Edit Post", edit_post_path(@post) %>
</p>
<p>
  <%= link_to "Delete Post", post_path(@post), method: :delete, data: {confirm: 'Delete this post and all associated comments?'} %>
</p>

<br/>
<br/>

<h5><%= count_comments(@post)%></h5>
<br/>
<br/>
<%= render :partial => "comments/new" %>
<br/>
<%= render :partial => "comments/index" unless !@comments %>

<br/>
<p>
  <%= link_to "Back Home", root_path %>
</p>

