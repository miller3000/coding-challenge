<!-- View for showing all `Posts` -->
<!-- `posts_path` -->

<h1>View posts below</h1>
<p>
  <%= link_to "Create new post", new_post_path %>
</p>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Link</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= truncate_title(post) %></td>
      <td><%= link_to "#{count_comments(post)}", post_path(post) %></td>
    </tr>
  <% end %>

</table>