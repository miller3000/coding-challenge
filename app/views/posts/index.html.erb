<!-- View for showing all `Posts` -->
<!-- `posts_path` -->

<h1>View posts below</h1>
<p>
  <%= link_to "Create new post", new_post_path %>
</p>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title.first(40) %></td>
      <td><%= post.body.first(100) %></td>
    </tr>
  <% end %>

</table>